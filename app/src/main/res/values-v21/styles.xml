<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/theme_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>


    <style name="EditTextBorder" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>


    <style name="TextviewLarge" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>



</resources>