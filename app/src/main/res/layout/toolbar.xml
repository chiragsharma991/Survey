<?xml version="1.0" encoding="utf-8"?>




<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_52sdp"
    android:minHeight="?attr/actionBarSize"
    android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:layout_collapseMode="pin"
    android:background="@color/theme_color"
    app:contentScrim="@android:color/white"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp"
    >

    <RelativeLayout
        android:id="@+id/toolbarRel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_toolbar_back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_centerVertical="true"
            android:padding="@dimen/_8sdp"
            app:srcCompat="@drawable/back"
            android:visibility="gone"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="@color/white"
            android:singleLine="true"
            android:maxLength="30"
            android:layout_toEndOf="@+id/img_toolbar_back"
            android:layout_toRightOf="@+id/img_toolbar_back"
            android:layout_centerVertical="true"
            android:text="Test"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/onlytxt_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:visibility="visible"
            />



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/more"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_centerVertical="true"
            android:padding="@dimen/_8sdp"
            app:srcCompat="@drawable/more_vert"
            android:visibility="gone"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_35sdp"
            android:clickable="true"
            android:focusable="true"
            android:layout_toStartOf="@+id/more"
            android:layout_toLeftOf="@+id/more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_centerVertical="true"
            android:padding="@dimen/_8sdp"
            app:srcCompat="@drawable/synch"
            android:visibility="gone"
            />





    </RelativeLayout>






</androidx.appcompat.widget.Toolbar>



