<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    >

    <data>

        <import type="android.view.View">

        </import>

        <variable
            name="onclick"
            type="com.softtech360.totalservey.activity.Login.MyClickHandler" />


    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/logincontainer"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appbar_header_height"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:expandedTitleMarginStart="@dimen/activity_margin_content"
                app:titleEnabled="false"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <ImageView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitEnd"
                    android:tint="@color/white"
                    app:layout_collapseMode="parallax"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titlename"
                    style="@style/TextBorder"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:singleLine="true"
                    android:layout_height="@dimen/_100sdp"
                    android:textColor="@color/white"

                    android:textSize="@dimen/_50sdp"
                    android:text="SURVEY"
                    android:textStyle="bold"
                    />


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/anim_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/scrollableview"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/activity_margin_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listItem="@layout/item_dessert"  >


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/username"
                style="@style/EditTextBorder"
                android:background="@drawable/whiterectangleshape"
                android:hint="User Name"
                android:inputType="text"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_32sdp"
                />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/password"
                style="@style/EditTextBorder"
                android:background="@drawable/whiterectangleshape"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_16sdp"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login_btn"
                style="@style/Button"
                android:layout_gravity="end"
                android:onClick="@{onclick::onLogin}"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:text="Login" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/forget_password"
                style="@style/TextBorder"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:onClick="@{onclick::onForgetPassword}"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginLeft="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_37sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:textColor="@color/theme_color"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Forgot Password ?"
                />





        </LinearLayout>














    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>





