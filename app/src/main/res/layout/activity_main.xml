<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    >

    <data>

        <import type="android.view.View">

        </import>

        <variable
            name="onclick"
            type="com.softtech360.totalservey.activity.MainActivity.MyClickHandler" />


    </data>


    <FrameLayout
        android:id="@+id/seccontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/toolbar">

                </include>

            </com.google.android.material.appbar.AppBarLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/appbar"
                android:layout_above="@+id/bottom_view">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.5" />


                    <RelativeLayout
                        android:id="@+id/titlename"
                        style="@style/TextBorder"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_width="@dimen/_300sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bluerect_shape"
                        android:singleLine="true"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextBorder"
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:text="सर्वे एप मे आपका स्वागत है"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_25sdp"
                            android:visibility="visible"

                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>



                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/completed_survey"
                        style="@style/TextBorder"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="32dp"
                        android:drawableStart="@drawable/dot"
                        android:drawableLeft="@drawable/dot"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/green"
                        android:singleLine="true"
                        android:text="@string/total_completed_survey"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/titlename"
                        tools:layout_editor_absoluteX="45dp" />

          <!--          <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/total_completed_survey"
                        style="@style/TextBorder"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="32dp"
                        android:singleLine="true"
                        android:text="04"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/completed_survey"
                        app:layout_constraintTop_toBottomOf="@+id/titlename" />-->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/completed_survey_card"
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="55dp"
                        android:layout_marginTop="@dimen/_16sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/completed_survey"
                        app:layout_constraintVertical_bias="0.0">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:singleLine="true"
                                android:id="@+id/survey_count_txt"
                                android:text="0"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_22sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/view"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <View
                                android:id="@+id/view"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:alpha="0.1"
                                android:background="@color/border_gray"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                            </View>


                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_42sdp"
                                android:layout_height="@dimen/_42sdp"
                                android:tint="@color/black"
                                android:id="@+id/syncing_btn"
                                android:padding="@dimen/_11sdp"
                                android:onClick="@{onclick.onSync}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/view"
                                app:layout_constraintTop_toTopOf="parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                app:srcCompat="@drawable/synch" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pending_survey_txt"
                        style="@style/TextBorder"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:drawableStart="@drawable/dot"
                        android:drawableLeft="@drawable/dot"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/red"
                        android:singleLine="true"
                        android:text="1 Pending Survey"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/completed_survey_card"
                        tools:layout_editor_absoluteX="45dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pending_survey_card"
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="55dp"
                        android:layout_marginTop="@dimen/_16sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pending_survey_txt"
                        app:layout_constraintVertical_bias="0.0">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            >

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_42sdp"
                                android:layout_height="@dimen/_42sdp"
                                android:layout_gravity="center"
                                android:id="@+id/edit_btn"
                                android:singleLine="true"
                                android:alpha="0.2"
                                android:padding="@dimen/_11sdp"
                                android:onClick="@{onclick.onEdit}"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/view2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/edit" />


                            <View
                                android:id="@+id/view2"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:alpha="0.1"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:background="@color/border_gray"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                            </View>


                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_42sdp"
                                android:layout_height="@dimen/_42sdp"
                                android:tint="@color/black"
                                android:id="@+id/delete_edt"
                                android:padding="@dimen/_11sdp"
                                android:alpha="0.2"
                                android:onClick="@{onclick.onDelete}"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/view2"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/delete" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>




                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/version_txt"
                        style="@style/TextBorder"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:singleLine="true"
                        android:text="@string/app_version"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_16sdp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pending_survey_card"
                        tools:layout_editor_absoluteX="45dp" />

